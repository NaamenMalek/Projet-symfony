{# templates/author/list.html.twig #}

<h1>Liste des Auteurs:</h1>

<table border="1"  class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th> {# Colonne pour les actions #}
        </tr>
    </thead>
    <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
                <td>
                    <a href="{{ path('edit_author', { id: author.id }) }}">Edit</a> | 
                    <a href="{{ path('delete_author', { id: author.id }) }}" onclick="return confirm('Are you sure you want to delete this author?');">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
